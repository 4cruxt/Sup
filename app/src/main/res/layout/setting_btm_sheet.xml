<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sttng_btm_sheet_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackgroundWhite"
    app:behavior_hideable="true"
    app:behavior_peekHeight="56dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">


    <View
        android:id="@+id/divider"
        android:layout_width="70dp"
        android:layout_height="3dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimaryPartial"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/s_btm_sht_p_edit_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:tint="@color/colorAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        app:srcCompat="@drawable/ic_baseline_edit_attributes_24"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/s_btm_sht_p_logout_button_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/s_btm_sht_p_edit_icon"
        app:layout_constraintTop_toBottomOf="@+id/s_btm_sht_p_edit_icon"
        app:srcCompat="@drawable/ic_logout_24"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/s_btm_sht_p_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="serif"
        android:text="@string/edit_profile"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/s_btm_sht_p_edit_icon"
        app:layout_constraintStart_toEndOf="@+id/s_btm_sht_p_edit_icon"
        app:layout_constraintTop_toTopOf="@+id/s_btm_sht_p_edit_icon" />

    <TextView
        android:id="@+id/s_btm_sht_p_logout_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="serif"
        android:text="@string/logout"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/s_btm_sht_p_logout_button_icon"
        app:layout_constraintStart_toEndOf="@+id/s_btm_sht_p_logout_button_icon"
        app:layout_constraintTop_toTopOf="@+id/s_btm_sht_p_logout_button_icon" />
</androidx.constraintlayout.widget.ConstraintLayout>