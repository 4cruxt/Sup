<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/timeline_card_placeholder"
        android:layout_width="290dp"
        android:layout_height="140dp"
        android:layout_marginStart="16dp"
        app:cardBackgroundColor="@color/colorPrimaryPartial"
        app:cardCornerRadius="10dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/t_item_watch_icon_placeholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:background="@color/colorPrimaryPartial"
                android:tint="@color/placeholder_grey_color"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_watch_24" />

            <TextView
                android:id="@+id/t_item_time_placeholder"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:background="@color/placeholder_grey_color"
                android:fontFamily="sans-serif-medium"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/t_item_watch_icon_placeholder"
                app:layout_constraintStart_toEndOf="@+id/t_item_watch_icon_placeholder"
                app:layout_constraintTop_toTopOf="@+id/t_item_watch_icon_placeholder" />

            <ImageView
                android:id="@+id/t_item_venue_icon_placeholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:background="@color/colorPrimaryPartial"
                android:tint="@color/placeholder_grey_color"
                app:layout_constraintBottom_toBottomOf="@+id/t_item_watch_icon_placeholder"
                app:layout_constraintEnd_toStartOf="@+id/t_item_venue_placeholder"
                app:layout_constraintTop_toTopOf="@+id/t_item_watch_icon_placeholder"
                app:srcCompat="@drawable/ic_venue_24" />

            <TextView
                android:id="@+id/t_item_venue_placeholder"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:background="@color/placeholder_grey_color"
                android:fontFamily="sans-serif-medium"
                app:layout_constraintBottom_toBottomOf="@+id/t_item_venue_icon_placeholder"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/t_item_venue_icon_placeholder" />

            <TextView
                android:id="@+id/t_item_course_name_placeholder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@color/placeholder_grey_color"
                android:textColor="@color/colorWhite"
                app:layout_constraintBottom_toTopOf="@+id/t_item_active_text_placeholder"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/t_item_watch_icon_placeholder" />

            <ImageView
                android:id="@+id/t_item_active_icon_placeholder"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"
                android:background="@color/colorPrimaryPartial"
                android:tint="@color/placeholder_grey_color"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/ic_dot_24" />

            <TextView
                android:id="@+id/t_item_active_text_placeholder"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:background="@color/placeholder_grey_color"
                android:fontFamily="sans-serif-medium"
                app:layout_constraintBottom_toBottomOf="@+id/t_item_active_icon_placeholder"
                app:layout_constraintStart_toEndOf="@+id/t_item_active_icon_placeholder"
                app:layout_constraintTop_toTopOf="@+id/t_item_active_icon_placeholder" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>